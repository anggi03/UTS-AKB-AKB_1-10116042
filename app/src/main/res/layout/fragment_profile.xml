<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    android:background="#ffcc"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/anggggggi"
                />

            <View
                android:layout_width="320dp"
                android:layout_marginTop="20dp"
                android:layout_height="2dp"
                android:background="#ffcc"/>
            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/contact"
                    android:layout_centerHorizontal="true"
                    android:text="Data Diri"
                    android:textSize="20dp" />




                <TextView
                    android:id="@+id/NoHp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contact"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:text="NIM : 10116042"
                    android:textColor="#2d3436" />
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/NoHp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:text="Nama : Anggi"
                    android:textColor="#2d3436"
                    android:textColorHighlight="#2d3436" />

                <TextView
                    android:id="@+id/ig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:text="Kelas : AKB-1"
                    android:textColor="#2d3436" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="50dp"
                    android:text="Deskripsi Diri : Annoying Girl!"
                    android:textColor="#2d3436" />
            </RelativeLayout>


        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>